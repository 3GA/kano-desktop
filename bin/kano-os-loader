#!/bin/sash -f
# to use:
# apt-get install /bin/sash
# Save as /bin/groundhog_day.sh
# make executable
# add init=/bin/groundhog_day.sh to kernel command line


mount -o remount,rw /
mkdir -p /overlays/scratch
mkdir -p /overlays/old
mkdir -p /overlays/merged
source /overlays/set_current.sash
mkdir -p $CURRENT
mount -t overlay overlay -o lowerdir=/,upperdir=$CURRENT,workdir=/overlays/scratch /overlays/merged
cd /overlays/merged
pivot_root . /overlays/merged/overlays/old/
-chroot .
exec /sbin/init



