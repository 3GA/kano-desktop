    type = launchbar
    Config {
        Button {
            id=kano-shutdown.desktop
        }
    }
}

Plugin {
    type = dclock
    Config {
        ClockFmt=%R
        TooltipFmt=%A %x
        BoldFont=0
        IconOnly=0
        CenterText=0
    }
